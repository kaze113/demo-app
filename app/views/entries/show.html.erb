<% provide(:title, @entry.title) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
			  <% @user = User.find(@entry.user_id) %>
			  <%= gravatar_for @user, size: 50 %>
        <%= link_to @user.name, @user %>
      </h1>
    </section>
      <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <ol class="entries">
      <%= render 'full_entry' %>
    </ol>
  </div>
</div>